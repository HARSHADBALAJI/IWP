  <script>
    async function loadTracker() {
      const { data: { user } } = await supabase.auth.getUser();
      if (!user) { window.location.href = "index.html"; return; }

      // Fetch skill tracker
      let { data: skills } = await supabase
        .from("skill_tracker")
        .select("*")
        .eq("email", user.email);

      if (skills) {
        document.getElementById("skill-table").innerHTML =
          skills.map(s => `
            <tr>
              <td>${s.domain}</td>
              <td>${s.completed}</td>
              <td>${s.total}</td>
              <td>${s.progress}%</td>
              <td>${s.tier}</td>
            </tr>
          `).join("");
      }

      // Fetch weekly goals
      let { data: goals } = await supabase
        .from("weekly_goals")
        .select("*")
        .eq("email", user.email);

      if (goals) {
        document.getElementById("weekly-goals").innerHTML =
          goals.map(g => `<li>${g.status} ${g.text}</li>`).join("");
      }

      // Example system note
      if (skills.some(s => s.progress === 0)) {
        document.getElementById("system-notes").textContent =
          "⚠️ Some domains have no attempts. Please complete at least 2 challenges to activate tracking.";
      }
    }

    loadTracker();
  </script>
